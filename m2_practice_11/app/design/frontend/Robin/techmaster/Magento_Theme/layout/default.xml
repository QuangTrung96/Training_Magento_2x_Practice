<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="default_head_blocks"/>
    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/logo_macfixit.png</argument>
                <argument name="logo_img_width" xsi:type="number">204</argument>
                <argument name="logo_img_height" xsi:type="number">76</argument>
            </arguments>
        </referenceBlock>

        <referenceContainer name="header.panel">
            <block class="Magento\Framework\View\Element\Html\Links" name="header.links">
                <arguments>
                    <argument name="css_class" xsi:type="string">header links</argument>
                </arguments>
            </block>
        </referenceContainer>

        <referenceContainer name="page.wrapper">
            <container name="our-satisfaction-guarantee" after="page.wrapper" htmlTag="div">
                <block class="Magento\Cms\Block\Block" name="Our-Satisfaction-Guarantee">
                    <arguments>
                      <argument name="block_id" xsi:type="string">our-satisfaction-guarantee</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>

        <referenceBlock name="header" remove="true"/>
        <referenceBlock name="register-link" remove="true"/>
        <referenceBlock name="footer_links" remove="true"/>
        <referenceBlock name="copyright" remove="true"/>
        <referenceBlock name="report.bugs" remove="true"/>
        <referenceBlock name="form.subscribe" remove="true"/>
        <referenceBlock name="advanced-search-link" remove="true"/>
         
        <referenceBlock name="header.links">
          <block class="Magento\Framework\View\Element\Html\Link" name="blog-link">
            <arguments>
              <argument name="label" xsi:type="string" translate="true">Blog</argument>
              <argument name="path" xsi:type="string" translate="true">Blog</argument>
            </arguments>
          </block>
        </referenceBlock>

        <referenceContainer name="header-wrapper">
            <container name="header-about-info" htmlTag="div" htmlClass="about-info">
                <block class="TQT\Macfixit\Block\HeaderTop" name="TQT_Macfixit_HeaderTop" template="TQT_Macfixit::header_top_block.phtml" />
            </container>  
        </referenceContainer>

        <referenceContainer name="footer-container" htmlId="footer-container" htmlClass="footer-container">
            <referenceContainer name="footer" htmlId="footer" htmlClass="footer">
                <container name="footer-middle" htmlTag="div" htmlClass="footer-middle" after="page.wrapper">
                    <block class="TQT\Macfixit\Block\Footer" name="TQT_Macfixit_Footer" template="TQT_Macfixit::footer.phtml" />
                </container>
            </referenceContainer>
        </referenceContainer>
         
        
        <referenceBlock name="product.info.addto" remove="true"/>
        <referenceBlock name="product.info.social" remove="true"/>
        <referenceBlock name="catalog.compare.sidebar" remove="true"/>
        <referenceBlock name="wishlist_sidebar" remove="true"/>
        <referenceContainer name="product.info.price" remove="true"/>
        
        <move element="product.info.stock.sku" destination="div.sidebar.additional" as="sku" before="-"/>
        <move element="product.price.final" destination="div.sidebar.additional" as="final" after="sku"/>
        <move element="product.info.simple" destination="div.sidebar.additional" as="info_sp" after="final"/>
        <move element="product.info" destination="div.sidebar.additional" as="info_pr" after="info_sp"/>
        <referenceContainer name="product.info.main">
            <block class="TQT\Macfixit\Block\Content" name="detail_pr" template="TQT_Macfixit::content.phtml" before="-">
            </block>
        </referenceContainer>
    </body>
</page>   